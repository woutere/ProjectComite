@model ProjectComite.ViewModels.CreateLidViewModel

@{
    ViewData["Title"] = "Creer nieuw lid";
}

<h2>Create</h2>

<h4>Lid</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="lid.naam" class="control-label"></label>
                <input asp-for="lid.naam" class="form-control" />
                <span asp-validation-for="lid.naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lid.gemeente.naam" class="control-label"></label>
                <select asp-for="lid.gemeenteId" class="form-control" asp-items="Model.gemeentes"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="lid.lidgeldBetaald" /> @Html.DisplayNameFor(model => model.lid.lidgeldBetaald)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="lid.emailAdres" class="control-label"></label>
                <input asp-for="lid.emailAdres" class="form-control" />
                <span asp-validation-for="lid.emailAdres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lid.telefoonnummer" class="control-label"></label>
                <input asp-for="lid.telefoonnummer" class="form-control" />
                <span asp-validation-for="lid.telefoonnummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lid.actieleden" class="control-label"></label>
                @foreach (var actie in Model.acties)
                {
                    <label asp-for="lid.actieleden" class="control-label">@actie.</label>
                    <input asp-for="lid.actieleden" class="form-control" type="radio" value="false" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
