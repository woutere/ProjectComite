    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.gemeente.naam)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.gemeente.naam)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.gemeente.postcode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.gemeente.postcode)
        </dd>
