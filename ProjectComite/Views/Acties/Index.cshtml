@model IEnumerable<ProjectComite.Models.Actie>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.informatie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gemeente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.informatie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gemeente.naam)
            </td>
            <td>
                @if (this.User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.actieId">Edit</a>
                }
                <a asp-action="Details" asp-route-id="@item.actieId">Details</a>
                @if (this.User.IsInRole("Admin"))
                {

                    <a asp-action="Delete" asp-route-id="@item.actieId">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
